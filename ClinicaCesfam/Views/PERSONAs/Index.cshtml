@model IEnumerable<ClinicaCesfam.Models.PERSONA>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-sm-6">
        <div style="display: inline-block;">
            <h1 style="font-family:Candara">Personas</h1>
            <a href="@Url.Action("Create")" class="btn btn-outline-dark btn-sm" style="width: 100%">
                <i class="fas fa-plus-circle"></i><span style="margin-left:5px"> Create New </span>
            </a>
        </div>
    </div>
    <div class="col-sm-6" style="display: flex;align-items: center;justify-content: flex-end;">
        <div>
            <h2 style="font-size:xxx-large;margin: auto;color: #c6cbcf;font-family: none;"><i class="far fa-hospital fa-lg"></i> Clinica <b>CESFAM</b></h2>
        </div>
    </div>
</div>
<br />
<table class="table table-hover">
    <thead class="table-bordered table-secondary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.numrun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dv_run)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pnombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.snombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.appaterno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apmaterno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.numrun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dv_run)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pnombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.snombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.appaterno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apmaterno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td style="text-align:center">
                <div class="btn-group btn-group-sm" data-toggle="buttons">
                    <label class="btn btn-outline-primary">
                        <a href="@Url.Action("Edit", new { id = item.id_persona })" class="btn btn-sm" style="font-size: smaller;">Edit </a>
                    </label>
                    <label class="btn btn-outline-secondary">
                        <a href="@Url.Action("Details", new { id = item.id_persona })" class="btn btn-sm" style="font-size: smaller;">Details </a>
                    </label>
                    <label class="btn btn-outline-danger">
                        <a href="@Url.Action("Delete", new { id = item.id_persona })" class="btn btn-sm" style="font-size: smaller;"> Delete</a>
                    </label>
                </div>
                <!--
                @Html.ActionLink("Edit", "Edit", new { id = item.id_persona }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_persona }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id_persona })
                -->

            </td>
        </tr>
        }

    </table>
